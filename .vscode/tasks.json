{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "dart",
            "command": "dart",
            "args": [
                "pub",
                "run",
                "build_runner",
                "build",
                "--delete-conflicting-outputs"
            ],
            "problemMatcher": [
                "$dart-build_runner"
            ],
            "group": "build",
            "label": "build_runner build"
        },
        {
            "type": "dart",
            "command": "dart",
            "args": [
                "format",
                "--line-length",
                "120",
                "."
            ],
            "group": "build",
            "label": "format"
        }
    ]
}